{
  "name": "ai-assistant-platform",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.js all",
    "build:win": "node build.js win",
    "build:mac": "node build.js mac", 
    "build:linux": "node build.js linux",
    "build:dev": "node build.js dev",
    "deploy": "./deploy.sh",
    "installer": "npm run build",
    "release": "npm run build && git tag v$(node -p \"require('./package.json').version\") && git push --tags"
    "build:windows": "node build-scripts/build-windows.js",
    "build:win": "node build-scripts/build-windows.js"
     "build:macos": "node build-scripts/build-macos.js",
    "build:mac": "node build-scripts/build-macos.js",
    "notarize": "node build-scripts/notarize.js"
    "installer:macos": "node build-scripts/macos-installer.js",
    "build:installer:mac": "npm run build:mac && npm run installer:macos"
  },
  "bin": {
    "ai-assistant-build": "./build.js"
  }
    "devDependencies": {
        "fs-extra": "^11.1.0",
        "plist": "^3.0.6",
        "electron-notarize": "^1.2.2"
  }
}
