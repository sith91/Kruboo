{
  "name": "ai-assistant-platform",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.js all",
    "build:win": "node build.js win",
    "build:mac": "node build.js mac", 
    "build:linux": "node build.js linux",
    "build:dev": "node build.js dev",
    "deploy": "./deploy.sh",
    "installer": "npm run build",
    "release": "npm run build && git tag v$(node -p \"require('./package.json').version\") && git push --tags"
  },
  "bin": {
    "ai-assistant-build": "./build.js"
  }
}
